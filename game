my @ttysz=(0,0);lycon::ttysz(\@ttysz);

sub draw {

  my $s="\e[2J\e[0H".cell::MAP;
  printf "$s\n";

};

scene::nit();
draw();

my $ents=scene::ents_in_view();

for my $ent(@$ents) {

  printf "$ent\n";

};

