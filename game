# ---   *   ---   *   ---
# global state

my %CACHE=(

  -TERMINATE=>0,
  -CMENU=>undef,

);

# ---   *   ---   *   ---
# getters

;;sub TERMINATE {
  avt::getset(\%CACHE,-TERMINATE,shift);

};sub CMENU {
  avt::getset(\%CACHE,-CMENU,shift);

};

# ---   *   ---   *   ---

my $scroll_up=sub {CMENU->sel_prev();};
my $scroll_down=sub {CMENU->sel_next();};

# ---   *   ---   *   ---

my @KEYS=(

  [-ESC,'escape','','',
    sub {TERMINATE(1);}

  ],

  [-RET,'ret','','',''],

  [-AFWD,'up',$scroll_up,$scroll_up,''],
  [-ABAK,'down',$scroll_down,$scroll_down,''],

  [-ALFT,'left','','',''],
  [-ARGT,'right','','',''],

  [-JMP,'space','','',''],

);

# ---   *   ---   *   ---

cell::mkgrid(8,8);

my $ent=entity::nit();

cell::draw_map();

# ---   *   ---   *   ---
1; # ret
